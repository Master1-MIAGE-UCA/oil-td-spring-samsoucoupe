{
	"name": "Java",
	"image": "mcr.microsoft.com/devcontainers/java:1-17-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "true",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers-extra/features/springboot-sdkman:2": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true
			}
		}
	},
	"forwardPorts": [
		8081
	],
	"remoteEnv": {
		"SUDO_FORCE_REMOVE": "true"
	}
}